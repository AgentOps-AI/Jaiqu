{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": [
                "string",
                "null"
            ],
            "description": "A unique identifier for the record."
        },
        "thread_id": {
            "type": "string",
            "format": "uuid",
            "description": "A UUID representing the thread."
        },
        "output": {
            "type": "string",
            "description": "The output value of an operation"
        },
        "input": {
            "type": "string",
            "description": "The input value to an operation"
        },
        "invocation_parameters": {
            "type": "string",
            "description": "Parameters used during the invocation of an LLM or API"
        },
        "prompt": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "message.role": {
                        "type": "string"
                    },
                    "message.content": {
                        "type": "string"
                    }
                },
                "required": [
                    "message.role",
                    "message.content"
                ]
            },
            "description": "List of messages sent to the LLM in a chat API request"
        },
        "completion": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "message.role": {
                        "type": "string"
                    },
                    "message.content": {
                        "type": "string"
                    }
                },
                "required": [
                    "message.role",
                    "message.content"
                ]
            },
            "description": "List of messages received from the LLM in a chat API request"
        },
        "prompt_tokens": {
            "type": "integer",
            "description": "The number of tokens in the prompt"
        },
        "completion_tokens": {
            "type": "integer",
            "description": "The number of tokens in the completion"
        },
        "total_tokens": {
            "type": "integer",
            "description": "Total number of tokens, including prompt and completion"
        },
        "tool_calls": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "tool_call.function.name": {
                        "type": "string"
                    }
                },
                "required": [
                    "tool_call.function.name"
                ]
            },
            "description": "List of tool calls (e.g. function calls) generated by the LLM"
        },
        "model_name": {
            "type": "string",
            "description": "The name of the language model being utilized"
        },
        "tool.name": {
            "type": "string",
            "description": "The name of the tool being utilized"
        },
        "tool.description": {
            "type": "string",
            "description": "Description of the tool's purpose and functionality"
        },
        "tool.parameters": {
            "type": "string",
            "description": "The parameters definition for invoking the tool"
        },
        "metadata": {
            "type": "string",
            "description": "Metadata associated with a span"
        },
        "init_timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "The initial timestamp when the operation was started"
        },
        "end_timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "The ending timestamp when the operation was completed"
        }
    },
    "required": [
        "output",
        "input",
        "invocation_parameters",
        "prompt",
        "completion",
        "model_name",
        "init_timestamp",
        "end_timestamp"
    ]
}